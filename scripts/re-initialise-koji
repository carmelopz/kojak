#!/bin/bash

set -x

# Check to see if user is root
if [ "$USER" != "root" ]; then
    echo -e "\n# This script requires root priviledges to run"
    exit
fi

service kojid stop
service kojira stop

# Create koji build directories
rm -rf /mnt/koji
mkdir /mnt/koji
cd /mnt/koji
mkdir {packages,repos,work,scratch}
chown apache.apache *
cd -

> /var/log/kojid.log
> /var/log/kojira.log

psql -U koji -f kojak_db

wget http://download.devel.redhat.com/brewroot/packages/org.apache.maven-maven/3.0.3/5/src/maven3-3.0.3-5.src.rpm
wget http://download.devel.redhat.com/brewroot/packages/org.apache.maven-maven/3.0.3/5/noarch/maven3-3.0.3-5.noarch.rpm
mkdir -p /mnt/koji/packages/maven3/3.0.3/5/src
mkdir -p /mnt/koji/packages/maven3/3.0.3/5/noarch
cp maven3-3.0.3-5.src.rpm /mnt/koji/packages/maven3/3.0.3/5/src
cp maven3-3.0.3-5.noarch.rpm /mnt/koji/packages/maven3/3.0.3/5/noarch
rm -rf maven3-3.0.3-5.src.rpm maven3-3.0.3-5.noarch.rpm

service postgresql restart
service kojid start
service kojira start

