import koji
import os
import sys

SESSION = koji.ClientSession('http://koji.localdomain/kojihub', {})

TASKS = SESSION.listTasks()
TASK_ID = TASKS[-1]['id']
TASK = SESSION.getTaskInfo(TASK_ID, request=True)
STATE = TASK['state']
KOJI_CMD = 'koji'

while STATE != koji.TASK_STATES['CLOSED']:
   print 'Jobs Pending'
print 'Job completed successfully'
