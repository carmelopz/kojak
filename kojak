# Uncomment to debug script
#set -x

# Check to see if user is root
if [ "$USER" != "root" ]; then
    echo -e "\n# This script requires root priviledges to run"
    exit
fi

SCRIPTS="`pwd`/scripts"

heading() {
    clear
    echo -e "\n################################################################################"
    echo -e "#                                                                              #"
    echo -e "#                   !!! Welcome to Kojak...Koji in a box !!!                   #"
    echo -e "#                                                                              #\n"
}

description() {
    echo -e ">> Select the type of installation form the menu options below.                \n"
}

menu () {
PS3='Please Select installation type: '
echo
options=("Virtual Installation" "Local Installation" "Remove-Installation" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "Virtual Installation")
            echo "Virtual Installation Selected "
            $SCRIPTS/virtual-install
            exit
            ;;
        "Local Installation")
            echo "Local Installation Selected "
            $SCRIPTS/local-install
            exit
            ;;
        "Remove Installation")
            echo "Remove Installation Selected "
            $SCRIPTS/remove-install
            exit
            ;;
        "Quit")
            break
            ;;
        *) echo invalid option
            ;;
    esac
done
}

heading
description
menu
