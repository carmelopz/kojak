# Uncomment to debug script
#set -x

# Check to see if user is root
if [ "$USER" != "root" ]; then
    echo -e "\n# This script requires root priviledges to run"
    exit
fi

reset

SCRIPTS="`pwd`/scripts"

welcome_header() {
    clear
    echo -e "\n################################################################################"
    echo -e "#                                                                              #"
    echo -e "#                   !!! Welcome to Kojak...Koji in a box !!!                   #"
    echo -e "#                                                                              #\n"
}

menu_msg_01() {
    echo -e ">> Select installation method from the menu options below."
}

menu () {
PS3='Please Select installation type: '
echo
options=("Virtual" "Local" "Remove" "Create Tags" "Quit")
select opt in "${options[@]}"
do
    case $opt in
        "Virtual Install")
            echo "Virtual Installation Selected"
            $SCRIPTS/install/virtual-install
            exit
            ;;
        "Local Install")
            echo "Local Installation Selected"
            $SCRIPTS/install/local-install
            exit
            ;;
        "Remove Install")
            echo "Removing Installation"
            $SCRIPTS/install/remove-install
            exit
            ;;
        "Create Tags")
            echo "Creating default tag base"
            $SCRIPTS/config/remove-install
            exit
        "Quit")
            break
            ;;
        *) echo -e ">> Invalid Option"
            ;;
    esac
done
}

welcome_header
menu_msg_01
menu
